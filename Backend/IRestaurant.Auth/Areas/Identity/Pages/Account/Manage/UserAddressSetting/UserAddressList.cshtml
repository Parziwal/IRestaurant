@page
@model UserAddressListModel
@{
    ViewData["Title"] = "Lakcímek";
    ViewData["ActivePage"] = ManageNavPages.UserAddressList;
}

<h4>@ViewData["Title"]</h4>

<p>
    <a asp-page="./CreateUserAddress" class="btn btn-success"><i class="fas fa-plus-square"></i> Új cím hozzáadása</a>
</p>
<partial name="_StatusMessage" for="ErrorMessage" />
<table class="table">
    <thead>
        <tr>
            <th>
                Irányítószám, Város
            </th>
            <th>
                Utca, házszám
            </th>
            <th>
                Telefonszám
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.UserAddressList)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ZipCode),
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Street)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    <a asp-page="./EditUserAddress" asp-route-addressId="@item.Id" class="btn btn-primary"><i class="fas fa-edit"></i></a> 
                    <a asp-page="./UserAddressList" onclick="return confirm('Biztosan törölni szeretnéd a címet?');" asp-page-handler="Delete" asp-route-addressId="@item.Id" class="btn btn-danger"><i class="fas fa-trash-alt"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>