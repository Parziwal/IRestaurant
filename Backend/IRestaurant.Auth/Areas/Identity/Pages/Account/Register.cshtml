@page
@model RegisterModel

@section Styles {
    <link rel="stylesheet" href="~/css/register.css" />
}

@{
    ViewData["Title"] = "Regisztráció";
}

<div class="row justify-content-center">
    <div class="col-lg-6 col-md-8 col-sm-10">
        <div class="card">
            <div class="card-header">
                <h3 class="text-center">@ViewData["Title"]</h3>
            </div>
            <div class="card-body">
                <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="toggle">
                        <input id="guest" class="toggle toggle-left" asp-for="Input.Role"
                               value="@IRestaurant.DAL.Models.UserRoles.Guest" type="radio" checked>
                        <label for="guest" class="toggle-btn">Vendég</label>
                        <input id="restaurant" class="toggle toggle-right" asp-for="Input.Role"
                               value="@IRestaurant.DAL.Models.UserRoles.Restaurant" type="radio">
                        <label for="restaurant" class="toggle-btn">Étterem</label>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.FullName"></label>
                        <input asp-for="Input.FullName" class="form-control" placeholder="Nagy Lajos" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control" placeholder="nagy.lajos@email.hu" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.ConfirmPassword"></label>
                        <input asp-for="Input.ConfirmPassword" class="form-control" />
                    </div>
                    <div class="form-group d-flex justify-content-center">
                        <button type="submit" class="btn btn-primary register-btn col-8">Regisztráció</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

